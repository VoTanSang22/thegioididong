@model IEnumerable<thegioididong.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin.cshtml";
}


<style>
    .button-a a {
        margin-top: 30px;
       
    }
    tr td p {
         margin-top: 30px;
        
    }
</style>

}
<div class="main-body-content  ets-pt" style="margin-top:20px; width:1340px;margin-left:-60px;margin-top:40px">
    <div class="table-responsive bg-light" style="margin-left:-60px ; width:1260px">

         <br />
        <i class="name-i" >Các loại sản phẩm</i>
        <br />
        <div style="display:flex;">
             <a asp-action="Create" class="btn btn-primary bi bi-file-earmark-plus-fill" style="margin: 20 0 20 40;"> Thêm Sản Phẩm</a>
             <a href="/Categories/Create" class="btn btn-primary bi bi-file-earmark-plus-fill" style="margin: 20 0 20 40;"> Thêm Nhà Sản Xuất</a>
             <a href="/Manufacturers/Create" class="btn btn-primary bi bi-file-earmark-plus-fill" style="margin: 20 0 20 40;"> Thêm Loại Sản Phẩm</a>

       
        </div>
       
        
    
        <br />
        <table id="zero_config"
               class="table table-striped table-bordered no-wrap">
            <thead>
                <tr>
                    <th>
                       Các loại sản phẩm
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name_Category)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Category" class="btn btn-primary bi bi-pencil-square"> Chỉnh Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.Id_Category" class="btn btn-secondary bi bi-exclamation-circle-fill"> Thông Tin</a>
                            <a asp-action="Delete" asp-route-id="@item.Id_Category" class="btn btn-danger bi bi-recycle"> Xóa</a>
            </td>
        </tr>
}
            </tbody>
        </table>

    </div>
</div>