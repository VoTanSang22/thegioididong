@model IEnumerable<thegioididong.Models.Manufacturer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin.cshtml";
}

<style>
    .button-a a {
        margin-top: 30px;
       
    }
    tr td p {
         margin-top: 30px;
        
    }
</style>

}
<div class="main-body-content  ets-pt" style="margin-top:20px; width:1340px;margin-left:-60px;margin-top:40px">
    <div class="table-responsive bg-light" style="margin-left:-60px ; width:1260px">

         <br />
        <i class="name-i" >Các nhà sản xuất</i>
        <br />
    
        <br />
        <table id="zero_config"
               class="table table-striped table-bordered no-wrap">
            <thead>
                <tr>
                    <th>
                      Nhà sản xuất
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name_manufacturer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_manufacturer" class="btn btn-primary bi bi-pencil-square"> Chỉnh Sửa</a>
                            <a asp-action="Details"asp-route-id="@item.Id_manufacturer" class="btn btn-secondary bi bi-exclamation-circle-fill"> Thông Tin</a>
                            <a asp-action="Delete" asp-route-id="@item.Id_manufacturer" class="btn btn-danger bi bi-recycle"> Xóa</a>
            </td>
        </tr>
}
            </tbody>
        </table>

    </div>
</div>